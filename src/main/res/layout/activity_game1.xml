                                android:id="@+id/btn24"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="45sp"
                                android:text="R"
                                />
                            <Button
                                android:id="@+id/btn25"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="45sp"
                                android:text="U"
                                />

                            />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>