                    />
                </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:weightSum="5">

                        <Button
                            android:id="@+id/btn16"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="45sp"
                            android:text="B"
                            />

                        <Button
                            android:id="@+id/btn17"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="45sp"
                            android:text="F"
                            />
                        <Button
                            android:id="@+id/btn18"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="45sp"
                            android:text="M"
                            />
                        <Button
                            android:id="@+id/btn19"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="45sp"
                            android:text="W"
                            />
                        <Button
                            android:id="@+id/btn20"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="45sp"
                            android:text="X"
                            />

                        />
                    </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:weightSum="5">

                            <Button
                                android:id="@+id/btn21"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="45sp"
                                android:text="Y"
                                />

                            <Button
                                android:id="@+id/btn22"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="45sp"
